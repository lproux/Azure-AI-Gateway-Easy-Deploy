    "    print(f\"‚úÖ JWT Token: {jwt_token[:20]}...{jwt_token[-10:]}\")\n",
    "except Exception as e:\n",
    "    print(f\"‚ùå Failed to get JWT: {e}\")\n",
    "    raise\n",
    "\n",
    "if not apim_api_key:\n",
    "    print(\"‚ùå APIM_API_KEY not set\")\n",
    "    raise ValueError(\"APIM_API_KEY required\")\n",
    "\n",
