    "    \"properties\": {\n",
    "        \"value\": policy_xml,\n",
    "        \"format\": \"xml\"\n",
    "    }\n",
    "}\n",
    "\n",
    "body_file = '/tmp/semantic-cache-from-notebook.json'\n",
